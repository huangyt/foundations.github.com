	$(ACDKLISP) -acdk-home=$(ACDKHOME) src\acdk_sql_sqlite.lsp -pdir src bcc
	$(ACDKLISP) -acdk-home=$(ACDKHOME) src\acdk_sql_sqlite.lsp -pdir src cbx

