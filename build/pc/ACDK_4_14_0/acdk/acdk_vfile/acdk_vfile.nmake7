	$(ACDKLISP) -acdk-home=$(ACDKHOME) src\acdk_vfile.lsp -pdir src sunos-gcc
	$(ACDKLISP) -acdk-home=$(ACDKHOME) src\acdk_vfile.lsp -pdir src bsd
