# this is a wrapper makefile
# pnmake7.template


ACDKHOME = ..
ACDKLISP=$(ACDKHOME)\bin\acdklisp
!include "$(ACDKHOME)\acdk_globals.nmake7"

PACKAGE = acdk_vfile

all: install compile 
  
compile::
  devenv $(PACKAGE).sln /build debug
  devenv $(PACKAGE).sln /build release

clean::
  devenv $(PACKAGE).sln /clean debug
  devenv $(PACKAGE).sln /clean release



install::
  set ACDKHOME=$(ACDKHOME)
  set PACKAGE=$(PACKAGE)
  set WEBHOME=$(WEBHOME)
  call $(ACDKHOME)\bin\install.cmd


test::
	$(ACDKHOME)\bin\acdk_vfile_Test_d
	if ERRORLEVEL 1 n echo Test acdk_vfile_Test failed; exit 1; 
	$(ACDKHOME)\bin\acdk_vfile_tar_Test_d
	if ERRORLEVEL 1 n echo Test acdk_vfile_tar_Test failed; exit 1; 
	$(ACDKHOME)\bin\acdk_vfile_zip_Test_d
	if ERRORLEVEL 1 n echo Test acdk_vfile_zip_Test failed; exit 1; 



