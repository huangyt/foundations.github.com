ACDKHOME=..
ACDKLISP=$(ACDKHOME)/bin/acdklisp

-include $(ACDKHOME)/acdk_globals.linux

PACKAGENAME=acdk_doc_urlify
DISTRIBVERSION=1.01
PACKAGEVERSION=1.01.0

default: all
all: acdk_doc_urlify 
clean: acdk_doc_urlify-clean 
acdk_doc_urlify:  
	cd src; $(MAKE) -f acdk_doc_urlify.linux

acdk_doc_urlify-clean:
	cd src; $(MAKE) -f acdk_doc_urlify.linux clean




doc::
