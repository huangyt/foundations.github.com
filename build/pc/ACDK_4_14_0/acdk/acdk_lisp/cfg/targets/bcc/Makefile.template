!include "$(ACDKHOME)/acdk_globals.bcc"

CC=%[(acdkmake-get-target-compile)]%
CCOPTS=%[(acdkmake-get-target-cflags)]%
CFLAGSX=%[(acdkmake-get-cflags2)]%
CCINCLUDE=%[(acdkmake-get-includes)]%
DEFINES=%[(acdkmake-get-defines)]%

SYSLDFLAGS=%[(acdkmake-get-target-ldflags)]%
