<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>MyApp.war</display-name>
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>com.artefaktur.sample.MyApp.NOLActionServlet</servlet-class>
<!--    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class> -->
    <init-param>
      <param-name>validate</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>application</param-name>
      <param-value>com.artefaktur.sample.MyApp.util.NOLMessageResources</param-value>
    </init-param>
    <init-param>
      <param-name>factory</param-name>
      <param-value>com.artefaktur.sample.MyApp.util.NOLMessageResourcesFactory</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>0</param-value>
    </init-param>
    <init-param>
      <param-name>detail</param-name>
      <param-value>0</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>


  <!-- error -->
  <error-page>
	<exception-type>java.lang.Throwable</exception-type>
    <location>/jsp/error.html</location>
  </error-page>

  <!-- taglibs -->
  <taglib>
    <taglib-uri>/WEB-INF/nol.tld</taglib-uri>
    <taglib-location>/WEB-INF/nol.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
    <taglib-location>/WEB-INF/struts-html.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
    <taglib-location>/WEB-INF/struts-logic.tld</taglib-location>
  </taglib>

  <!-- security -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Sample Online JSPs</web-resource-name>
      <url-pattern>*.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>MyApp_role</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>MyApp_realm</realm-name>
  </login-config>
  <security-role>
    <description>MyApp Online Role</description>
    <role-name>MyApp_role</role-name>
  </security-role>
</web-app>
